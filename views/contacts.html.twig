<html>
    <head>
        <title>Add a contact</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
        <style media="screen">
            ul {
                list-style-type: none;
            }
        </style>
    </head>
    <body>
        <div class="container">
            <div class="row">
                <div class="col-sm-6">
                    <h1>Your list of contacts</h1>
                    //Hides the paragraph if contacts array is empty
                    {% if contacts is not empty %}
                    <p>Here are are your contacts</p>
                    <ul>
                        //Loops through the contacts array and outputs each name, phone and address in a list
                        {% for contact in contacts %}
                        <li>{{contact.getName}}</li>
                        <li>{{contact.getPhone}}</li>
                        <li>{{contact.getAddress}}</li>
                        {% endfor %}
                    </ul>
                    {% endif %}

                </div>
                <div class="col-sm-6">
                    <h1>Add your contact info</h1>
                    <form  action="/contacts" method="post">
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input type="text" name="name" id="name" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="phone">Phone</label>
                            <input type="text" name="phone" id="phone" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="address">Address</label>
                            <input type="text" name="address" id="address" class="form-control">
                        </div>
                        <button name="submit" class= "btn btn-success">Add contact</button>
                    </form>
                    //Deletes all the entries in the list by re-setting the SESSION array to an empty array
                    <form action="/delete_contacts" method="post">
                        <button name="submit" class="btn btn-warning">Clear the address book</button>
                    </form>
                </div>
            </div>
        </div>
    </body>
</html>
